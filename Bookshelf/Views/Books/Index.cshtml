@model IEnumerable<Bookshelf.Models.Book>

@{
    ViewData["Title"] = "Index";
}
<br/>
<h1>My Bookshelf</h1>
<br/>
<p>
    <a class="btn btn-link" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                Genre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <ul>
                    @foreach (var g in item.BookGenres)
                    {
                    <li> @Html.DisplayFor(model => g.Genre.Name)</li>
                    }

                    </ul>
            </td>
            <td>
                <a class="btn btn-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
